<html>
    <head>
        <link rel="stylesheet" href="../static/css/navbar.css">
        <link rel="stylesheet" href="../static/css/bootstrap-min.css">
    </head>
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
        <div class="container-fluid">
          <a style="margin-left: 2%;" class="navbar-brand" href="#">
            <img src="https://i.imgur.com/YfKn5dP.png" alt="" width="50" height="50">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link disabled" aria-current="page" href="/"><span style="text-decoration: underline; color: #7289DA">Home</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#features">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <li id="support-link" class="nav-item">
                <a class="nav-link" href="/support">Support</a>
              </li>
              <li style="visibility: hidden;" id="loginButtonCollapsed" class="nav-item">
                <a class="nav-link" href="/oauth/login">Login</a>
              </li>
              <% if (userData) { %>
                <div class="profilePart">
                  <img src="https://cdn.discordapp.com/avatars/<%= userData.id %>/<%= userData.avatar %>.png?size=4096">
                  <p id="profilePartUsername"><%= userData.username %><span id="profilePartDiscriminator">#<%= userData.discriminator %> </span></p>
                  <a href="/oauth/logout">Logout</a>
                </div>
                <a id="profileDropdown" href="/oauth/logout">Logout</a>
              <% } %>  
            </ul>
          </div>
        </div>
      </nav>

      <div onclick="window.location='/oauth/Login'" id="loginButton" class="loginButton">
        <a href="/oauth/login">LOGIN</a>
      </div>
</html>